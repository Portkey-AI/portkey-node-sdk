{
    "compilerOptions": {
        "sourceMap": true,
        "declaration": true,
        "target": "ES2015",
        "lib": [
            "ES2015",
            "dom"
        ],
        "module": "CommonJS",
        "esModuleInterop": true,
        "baseUrl": "./",
        "resolveJsonModule": true,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictBindCallApply": true,
        "strictPropertyInitialization": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "exactOptionalPropertyTypes": true,
        "noUncheckedIndexedAccess": true,
        "noImplicitOverride": true,
        "noPropertyAccessFromIndexSignature": true,
        "skipLibCheck": true,
        "outDir": "./dist",
    },
    "include": [
        "./src/**/*.ts" // Files to include in compilation
    ],
    "exclude": [
        "./node_modules" // Files/folders to exclude from compilation
    ]
}