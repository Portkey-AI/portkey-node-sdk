{
    "include": [
        "src",
        "tests",
        "examples",
    ],
    "compilerOptions": {
        "sourceMap": true,
        "declaration": true,
        "target": "ES2015",
        "lib": [
            "ES2015",
            "dom"
        ],
        "module": "CommonJS",
        "esModuleInterop": true,
        "baseUrl": ".",
        "paths": {
            "portkey-ai/*": [
                "src/*"
            ],
            "portkey-ai": [
                "src/index.ts"
            ],
        },
        "resolveJsonModule": true,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictBindCallApply": true,
        "strictPropertyInitialization": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "exactOptionalPropertyTypes": true,
        "noUncheckedIndexedAccess": true,
        "noImplicitOverride": true,
        "noPropertyAccessFromIndexSignature": true,
        "skipLibCheck": true,
        "outDir": "./dist",
    },
    "exclude": [
        "./node_modules" // Files/folders to exclude from compilation
    ],
    "jest": {
        "preset": "ts-jest"
    }
}